; EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Tabs in JS unless otherwise specified
[**.js]
indent_style = space
indent_size = 2

[**.jade]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2

[**.htm]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.scss]
indent_style = space
indent_size = 2

[**.sass]
indent_style = space
indent_size = 2

[**.less]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
